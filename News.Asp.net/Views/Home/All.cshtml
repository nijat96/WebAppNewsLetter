@model IEnumerable<DTO.EntityDTO.PostDTO>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-body">
	<div class="wrap">
		<ol class="breadcrumb">
			<li><a href="index.html">Home</a></li>
			<li class="active">Technology</li>
		</ol>
		<div class="col-md-12 content-left">
			<div class="articles sports">
				<header>
					<h3 class="title-head">Nəticələr @ViewBag.c</h3>
				</header>
				<div class="technology">
					<div class="tech-main">
						@foreach (var item in Model)
						{
							<div class="tech">
								<a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id"><img src="@item.Image1" alt="" /></a>
								@if (item.Title.Length > 60)
								{
									<a class="power" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
										@item.Title.Remove(60)...
									</a>
								}
								else
								{
									<a class="power" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
										@item.Title
									</a>
								}
							</div>
						}

						<div class="clearfix"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
</div>


<style>
	.tech {
		width: 23%;
		float: left;
		margin: 12px;
	}
</style>

